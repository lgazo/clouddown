{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "WebWorker"],
    "rootDir": "src",
    "strict": true,
    "outDir": "lib",
    "types": [
      "@cloudflare/workers-types",
      "@types/node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "src"
  ]
}
